<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CrossCam.CustomElement.FooterLabel"
             Padding="15">
    <StackLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped"/>
    </StackLayout.GestureRecognizers>
    <Label x:Name="_emailMeLabel" 
           Margin="0">
        <Label.FormattedText>
            <FormattedString>
                <Span Text="Found a bug? Have a question? Just email "/>
                <Span Text="me@kra2008.com" 
                      TextDecorations="Underline"
                      TextColor="LightBlue"/>
                <Span Text="! I love talking with users and it's the fastest way to communicate with me."/>
            </FormattedString>
        </Label.FormattedText>
    </Label>
    <Label x:Name="_versionLabel"
           Margin="0"/>
</StackLayout>